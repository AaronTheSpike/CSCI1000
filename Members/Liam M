#include <iostream>
#include <cmath>
#include <thread>
#include <chrono>
using namespace std;

void printWave() {
    const int width = 70;
    const double pi = 3.1415926535;
    for (int t = 0; t < 200; t++) {
        for (int x = 0; x < width; x++) {
            double y = sin((x + t) * 0.2);
            int height = static_cast<int>((y + 1) * 10);
            for (int i = 0; i < height; i++) cout << " ";
            cout << "*\n";
        }
        this_thread::sleep_for(chrono::milliseconds(60));
        system("clear"); // use "CLS" if on Windows
    }
}

int main() {
    cout << "ðŸŒŠ Sine Wave Animation ðŸŒŠ" << endl;
    this_thread::sleep_for(chrono::seconds(1));
    printWave();
    cout << "\nDone!" << endl;
    return 0;
}
